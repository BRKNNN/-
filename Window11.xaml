<Window x:Class="авторизация_и_регистрация_буркин.Window11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:авторизация_и_регистрация_буркин"
        mc:Ignorable="d"
        Title="Window11" Height="800" Width="800">
    <Grid>
        <StackPanel Margin="30,0,30,0">
            <TextBlock Text="ADMIN PANEL" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="0 0 0 20"/>
            <Button x:Name="Load_table_txt" HorizontalAlignment="Left" Content="Загрузить таблицу" FontWeight="Bold" FontSize="20" Click="Load_table_txt_Click"/>
            <DataGrid x:Name="UsersGrid" Height="300">
            </DataGrid>
            <StackPanel Width="140" HorizontalAlignment="Left">
                <TextBlock Text="Введите ID" Margin="0"/>
                <TextBox x:Name="Idbox" Width="140" Height="30" BorderBrush="Black" TextChanged="Idbox_TextChanged"/>
                <Button x:Name="Delete_Button" HorizontalAlignment="Left" Height="30" Width="140" Content="Удалить пользователя" FontWeight="Bold" Click="Delete_Button_Click" />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
