<Window x:Class="авторизация_и_регистрация_буркин.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:авторизация_и_регистрация_буркин"
        mc:Ignorable="d"
        Title="Window10" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50,0,50,0">
            <TextBlock Text="Редактирование учетной записи" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
            <TextBlock Text="Введите новый номер"/>
            <TextBox x:Name="numberNewbox" Margin="0 0 0 20"/>
            <TextBlock Text="Введите старый пароль"/>
            <PasswordBox x:Name="passOldbox" Margin="0 0 0 20"/>
            <TextBlock Text="Введите новый пароль"/>
            <PasswordBox x:Name="passNewbox" Margin="0 0 0 20" />
            <TextBlock Text="Введите новый E-mail"/>
            <TextBox x:Name="emailNewbox"  Margin="0 0 0 20"/>
            <Button Content="Редактировать личные данные" Margin="0 20" Click="Button_Edit_Info_click"/>
        </StackPanel>
    </Grid>
</Window>
